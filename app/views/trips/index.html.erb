<!-- index.html.erb -->

<h1>My Dashboard</h1>

<div class="trip-index">
  <% @trips.each do |trip| %>
  <div class="trip-card">
  <h3><%= link_to trip.name, trip_tasks_path(trip) %></h3>
  <%= link_to "Delete trip", trip_path(trip),
      method: :delete,
      data: { confirm: "Are you sure?" } %>
  <h5> <%= trip.destination %> </h5>
  <ul>
    <% trip.participants.each do |participant| %>
    <li><%= participant.user.name if !participant.user.nil? %></li>
  <% end %>
  </ul>
  </div>
  <% end %>
</div>



<div class="button-create">
  <%= button_to "Create a Trip", new_trip_path, :method => "get", class: "btn btn-flat" %>
</div>


<div class="personal-tasks">
  <h2>My Tasks</h2>
  <% current_user.tasks.each do |task| %>
  <ul>
    <li>
      <%= task.name %> | <%=  task.trip.name  %> | <%= task.due_date%>
    </li>
  </ul>
  <% end %>
</div>
